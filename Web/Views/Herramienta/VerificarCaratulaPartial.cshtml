@model Domain.Models.VerificarCaratulaModel

<!-- Modal -->
<div class="modal fade" id="modal-panel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-error="@Model.Caratula.Resultado">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div id="modal-success" class="modal-body">
                <div class="form-group">
                    <label class="control-label">Nro. Tramite:</label>
                    <em>@Model.Caratula.NroTramite</em>
                </div>
                <div class="form-group">
                    <label class="control-label">Nro. Formulario:</label>
                    <em>@Model.Caratula.NroFormulario</em>
                </div>
                <div class="form-group">
                    <label class="control-label">Nro. Presentacion:</label>
                    <em>@Model.Caratula.NroPresentacion</em>
                </div>
                <div class="form-group">
                    <label class="control-label">Nro Correlativo:</label>
                    <em>@Model.Caratula.NroCorrelativo</em>
                </div>
                <div class="form-group">
                    <label class="control-label">Razon Social:</label>
                    <em>@Model.Caratula.Denominacion</em>
                </div>
                <div class="form-group">
                    <label class="control-label">Tipo Societario:</label>
                    <em>@Model.Caratula.TipoSocietario</em>
                </div>
            </div>
            <div id="modal-danger" class="modal-body">
                <label class="control-label">Descripcion:</label>
                <em id="txt-ms">@Model.Caratula.Mensaje</em>
            </div>
            <div class="modal-footer">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    $(document).ready(function () {
        $('#modal-success').hide();
        $('#modal-danger').hide();
        $('#modal-footer').hide();

        var pnlModal = $('#modal-panel');
        if (pnlModal.attr('data-error') == '0') {
            $('.modal-title').text('Datos de Carátula');
            $('#modal-success').show();
            $('#modal-footer').show();
        }
        else {
            $('.modal-title').text('Error en la operación');
            $('#modal-danger').show();
        }
        pnlModal.modal('show');

    });
</script>