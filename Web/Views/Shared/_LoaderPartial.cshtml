    <div class="modal-dialog">
        <div id="circularG" class="container">
            <div id="circularG_1" class="circularG">
            </div>
            <div id="circularG_2" class="circularG">
            </div>
            <div id="circularG_3" class="circularG">
            </div>
            <div id="circularG_4" class="circularG">
            </div>
            <div id="circularG_5" class="circularG">
            </div>
            <div id="circularG_6" class="circularG">
            </div>
            <div id="circularG_7" class="circularG">
            </div>
            <div id="circularG_8" class="circularG">
            </div>
        </div>
        <div id="image-loader" class="container">
            <img src="@Url.Content("~/Images/loader.gif")" />
        </div>
        <h4 class="text-center">Cargando...</h4>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    $(document).ready(function () {
        $('.modal-dialog .container').hide();

        var agent = navigator.userAgent.toLowerCase();
        if (agent.indexOf('msie') > -1) {
            var version = agent.split(';')[1];
            version = version.substring(version.lastIndexOf(' ', version.length) + 1, version.legth);

            if (version < 9) {
                $('#image-loader').show();
                return true;
            }
        }
        $('#circularG').show();
    });
</script>